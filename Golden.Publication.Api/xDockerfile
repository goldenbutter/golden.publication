# -------- Build stage --------
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

# Copy solution context (API + src)
COPY ../Golden.Publication.Api ./Golden.Publication.Api
COPY ../src ./src

# Restore & publish
RUN dotnet restore ./Golden.Publication.Api/Golden.Publication.Api.csproj
RUN dotnet publish ./Golden.Publication.Api/Golden.Publication.Api.csproj -c Release -o /app/publish

# -------- Runtime stage --------
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS final
WORKDIR /app

# Copy published output
COPY --from=build /app/publish .

# Copy the XML into the image and point env to it
COPY ../src/Golden.Publication.Data/Data/publications.xml /app/Data/publications.xml
ENV PUBLICATION_XML_FILE=/app/Data/publications.xml

# Expose HTTP
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "Golden.Publication.Api.dll"]

